@model  UserAuditListViewModel

@{
	ViewBag.Title = "User Audit Timeline";
}
<style>
	.timeline {
		list-style: none;
		padding: 0;
		position: relative;
	}

		.timeline:before {
			content: '';
			background: #d4d9df;
			display: inline-block;
			position: absolute;
			left: 50%;
			width: 2px;
			height: 100%;
			z-index: 400;
		}

	.timeline-item {
		margin: 20px 0;
		position: relative;
	}

	.timeline-badge {
		color: #fff;
		width: 50px;
		height: 50px;
		display: inline-block;
		text-align: center;
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		background: #6c757d;
		border-radius: 50%;
		z-index: 100;
	}

	.timeline-panel {
		position: relative;
		width: 46%;
		padding: 20px;
		text-align: left;
		background: #f7f7f7;
		border: 1px solid #d4d9df;
		border-radius: 5px;
	}

		.timeline-panel:before {
			content: "";
			position: absolute;
			top: 26px;
			right: -15px;
			border-style: solid;
			border-width: 15px 0 15px 15px;
			border-color: transparent transparent transparent #f7f7f7;
		}

		.timeline-panel:after {
			content: "";
			position: absolute;
			top: 27px;
			right: -14px;
			border-style: solid;
			border-width: 14px 0 14px 14px;
			border-color: transparent transparent transparent #d4d9df;
		}
</style>

<div class="container mt-5">
	<h2>User Audit Timeline</h2>
	<ul class="timeline">
		@foreach (var item in Model.Items)
		{
			<li class="timeline-item">
				<div class="timeline-badge">
					<i class="glyphicon glyphicon-check"></i>
				</div>
				<div class="timeline-panel">
					<div class="timeline-heading">
						<h4 class="timeline-title">@item.Forename @item.Surname</h4>
						<p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> @item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
					</div>
					<div class="timeline-body">
						<p><strong>Email:</strong> @item.Email</p>
						<p><strong>Date of Birth:</strong> @item.DateOfBirth.ToString("yyyy-MM-dd")</p>
						<p><strong>Status:</strong> @(item.IsActive ? "Active" : "Inactive")</p>
						<p><strong>Audit Type:</strong> @item.AuditLogType</p>
					</div>
				</div>
			</li>
		}
	</ul>
</div>


	

