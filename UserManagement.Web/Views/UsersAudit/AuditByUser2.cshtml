@model UserAuditListViewModel

<style>
	.timeline-container {
		position: relative;
		max-width: 800px;
		margin: auto;
		padding: 10px;
	}

	.timeline-item {
		position: relative;
		border-left: 3px solid #0d6efd;
		padding-left: 2rem;
	}

		.timeline-item:before {
			content: "";
			position: absolute;
			left: -3px;
			top: 10px;
			bottom: 10px;
			width: 3px;
			background: #0d6efd;
			z-index: 1;
		}

	.timeline-badge {
		width: 50px;
		height: 50px;
		position: absolute;
		left: -28px;
		z-index: 2;
		font-size: 24px;
	}

	.timeline-content {
		background-color: #f8f9fa;
		border: 1px solid #dee2e6;
		border-radius: .5rem;
		padding: 1rem;
	}

	.timeline-green {
		background-color: lightgreen !important;
	}

	.timeline-content .card-body {
		padding: 0;
	}

	.text-warning {
		color: #ffc107 !important;
	}

	.fw-bold {
		font-weight: bold;
	}
</style>

<div class="container mt-5">
	<h2 class="text-center">User Audit Timeline</h2>
	<div class="timeline-container position-relative">
		@{
			UserAuditListItemViewModel previousState = new UserAuditListItemViewModel();
			bool isFirst = true;
			string classTimeline = "timeline-green";

			@foreach (var item in Model.Items)
			{
				// Assume GetPreviousState is a method to get the previous state of the user
				//var previousState = GetPreviousState(item.UserId, item.CreatedDate);

				<div class="timeline-item d-flex align-items-start my-4">
					<div class="timeline-badge bg-primary text-white text-center rounded-circle d-flex align-items-center justify-content-center">
						<i class="bi bi-clock-history"></i>
					</div>
					<div class="timeline-content @classTimeline card flex-grow-1 ms-4">
						<div class="card-body">
							<h5 class="card-title mb-1">
								<span class="@( !isFirst && item.Email != previousState?.Email ? "text-warning fw-bold" : "")">
									@item.Forename
								</span>
								<span class="@( !isFirst && item.Email != previousState?.Email ? "text-warning fw-bold" : "")">
									@item.Surname
								</span>
							</h5>
							@if (isFirst)
							{
								@* <h6 class="card-subtitle mb-2 text-muted">@item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</h6> *@
							}
							else
							{
								<h6 class="card-subtitle mb-2 text-muted">@item.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</h6>
							}


							<p class="mb-1">
								<strong>Email:</strong>
								<span class="@( !isFirst && item.Email != previousState?.Email ? "text-warning fw-bold" : "")">
									@item.Email
								</span>
							</p>
							<p class="mb-1">
								<strong>Date of Birth:</strong>
								<span class="@(!isFirst && item.DateOfBirth != previousState?.DateOfBirth ? "text-warning fw-bold" : "")">
									@item.DateOfBirth.ToString("yyyy-MM-dd")
								</span>
							</p>
							<p class="mb-1">
								<strong>Active:</strong>
								<span class="@(!isFirst && item.IsActive != previousState?.IsActive ? "text-warning fw-bold" : "")">
									@if (item.IsActive)
									{
										<span class="badge bg-success">Active</span>
									}
									else
									{
										<span class="badge bg-secondary">Inactive</span>
									}
								</span>
							</p>
							<p class="mb-1">
								<strong>Audit Log Type:</strong>

								@if (isFirst)
								{
									<span>Latest Data</span>
								}
								else
								{
									<span>	@item.AuditLogType</span>
								}


							</p>
						</div>
					</div>
				</div>
				isFirst = false;
				classTimeline = "";
				previousState = item; // Update the previous item to the current one
			}
		}
	</div>
</div>
