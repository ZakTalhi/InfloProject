@model UserListItemViewModel

@{
	ViewBag.Title = "Delete User";
}

<div class="container mt-5">
	<h2>Delete User</h2>
	<div class="alert alert-warning" role="alert">
		Are you sure you want to delete this user?
	</div>
	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="Id" />

		<div class="form-group">
			<label>Forename:</label>
			<p class="form-control-static">@Model.Forename</p>
		</div>

		<div class="form-group">
			<label>Surname:</label>
			<p class="form-control-static">@Model.Surname</p>
		</div>

		<div class="form-group">
			<label>Email:</label>
			<p class="form-control-static">@Model.Email</p>
		</div>

		<div class="form-group">
			<label>Date of Birth:</label>
			<p class="form-control-static">@Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
		</div>

		<div class="form-group">
			<label>Active:</label>
			<p class="form-control-static">@Model.IsActive</p>
		</div>

		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-action="Index" class="btn btn-secondary">Cancel</a>
	</form>
</div>
