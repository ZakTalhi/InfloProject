@model UserListItemViewModel

@{
	ViewBag.Title = "User Details";
}

<div class="container mt-5">
	<h2>User Details</h2>
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">@Model.Forename @Model.Surname</h5>
			<dl class="row">
				<dt class="col-sm-3">Forename</dt>
				<dd class="col-sm-9">@Model.Forename</dd>

				<dt class="col-sm-3">Surname</dt>
				<dd class="col-sm-9">@Model.Surname</dd>

				<dt class="col-sm-3">Email</dt>
				<dd class="col-sm-9">@Model.Email</dd>

				<dt class="col-sm-3">Date of Birth</dt>
				<dd class="col-sm-9">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>

				<dt class="col-sm-3">Active</dt>
				<dd class="col-sm-9">
					@if (Model.IsActive)
					{
						<span class="badge bg-success">Active</span>
					}
					else
					{
						<span class="badge bg-secondary">Inactive</span>
					}
				</dd>
			</dl>
			<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
			<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
			<a asp-action="Index" class="btn btn-secondary">Back to List</a>
		</div>
	</div>
</div>
